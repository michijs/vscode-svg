{
  "name": "@michijs/vscode-svg",
  "displayName": "SVG 2",
  "description": "SVG extension for VS Code",
  "author": "Lucas M. Segurado",
  "icon": "media/svg.png",
  "version": "2.0.6",
  "publisher": "michijs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michijs/vscode-svg.git"
  },
  "files": [
    "dist/"
  ],
  "galleryBanner": {
    "color": "#5663da",
    "theme": "dark"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/michijs"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.38.0"
  },
  "scripts": {
    "start": "ts-node ./tasks/generateTypes.ts",
    "dist": "tsc",
    "publish": "npm run start && npm publish --access public",
    "package": "change-package-name vscode-svg && vsce package && change-package-name @michijs/vscode-svg",
    "publish-vsce": "vsce publish",
    "link": "npm run dist && npm link --force && tsc -w"
  },
  "keywords": [
    "math",
    "svg",
    "html",
    "typescript"
  ],
  "devDependencies": {
    "change-package-name": "1.0.5",
    "@vscode/vsce": "2.18.0",
    "@vscode/web-custom-data": "0.4.5",
    "lint-staged": "13.1.2",
    "rome": "11.0.0",
    "simple-git-hooks": "2.8.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "vscode-html-languageservice": "5.0.4"
  },
  "contributes": {
    "html": {
      "customData": [
        "./dist/svg.json"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "rome check --apply-suggested",
      "rome format --write"
    ]
  }
}